<% if @notifications %>
  <a class="nav-link dropdown-toggle mr-lg-2" id="alertsDropdown" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <i class="fa fa-fw fa-bell"></i>
      <% if @notifications.present? %>
        <span class="d-lg-none">Alerts
          <span class="badge badge-pill badge-warning"><%= @notifications.size %> New</span>
        </span>
        <span class="indicator text-warning d-none d-lg-block">
          <i class="fa fa-fw fa-circle"></i>
        </span>
      <% end %>
    </a>
  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="alertsDropdown">
    <h6 class="dropdown-header">New Alerts:</h6>
    <div class="dropdown-divider"></div>

    <% @notifications.each do |notif| %>
      <a class="dropdown-item" href="#">
          <span class="text-success">
            <strong>
              <i class="fa fa-long-arrow-up fa-fw"></i>New Update!</strong>
          </span>
          <span class="small float-right text-muted"><%= distance_of_time_in_words(notif.relevant_thing.created_at, Time.now.utc) %></span>
          <div class="dropdown-message small">You've got a new update! Visit your dashboard.</div>
        </a>
      <div class="dropdown-divider"></div>
    <% end %>

    <a class="dropdown-item small" href="#">View all alerts</a>
  </div>
<% end %>
