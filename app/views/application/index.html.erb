<% if current_user %>
  <div class="categories-container">
    <% if @user_categories.nil? %>
      <div class="empty-state">
        <h3 class="text-info">No Categories</h3>
        <small>Add one below!</small>
      </div>
    <% else %>
      <% @user_categories.each do |category| %>
        <%= render 'category_card', category: category %>
      <% end %>
    <% end %>

    <div class="new-category-wrapper">
      <div class="new-category-container">
        <%= form_for UserCategory.new(user: current_user) do  |f| %>
            <div class="form-group">
              <%= f.text_field :name, class: 'form-control form-control-sm', placeholder: 'Name' %>
            </div>
            <%= f.submit 'Create Category', class: 'btn btn-sm btn-info form-control' %>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="card bg-light profile-card">
    <div class="card-body">
      <h5 class="card-title">Sign up to start!</h5>

      <%= form_for(:user, url: registration_path(:user)) do |f| %>
        <div class="form-group">
          <%= f.label :email, class: '' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: '' %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: '' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-info form-control' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

